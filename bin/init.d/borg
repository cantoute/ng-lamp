#!/bin/bash

>&2 echo "Downloading and installing borg + bash autocompletion"

cd /usr/local/bin \
  && wget https://github.com/borgbackup/borg/releases/download/1.2.2/borg-linux64 \
  && mv borg-linux64 borg \
  && chmod +x borg

cd /etc/bash_completion.d \
  && wget https://github.com/SanskritFritz/borg/raw/master/scripts/shell_completions/bash/borg \
  && chmod +x borg
